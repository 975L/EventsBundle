{% extends "@c975LEvents/layout.html.twig" %}
{% trans_default_domain 'events' %}

{% block events_content %}
    {{ include('@c975LEvents/tinymceInit.html.twig') }}

{# Toolbar #}
    {{ toolbar|raw }}

{# Picture #}
    {% if eventPicture != null %}
        <p class="text-center">
            <img src="{{ asset(eventPicture) }}" class="img-responsive img-thumbnail center-block" alt="{{ event.title }}" title="{{ event.title }}" />
        </p>
    {% endif %}

{# Form #}
    {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="form-group">
            <button type="submit" name="submit" title="{{ 'label.modify'|trans }}" class="btn btn-lg btn-primary btn-block">
                {{ 'label.validate'|trans }}
            </button>
        </div>
    {{ form_end(form) }}

{# Cancel #}
    <p class="text-center">
        <a href="javascript:history.back()">
            {{ 'label.cancel'|trans }}</a>
    </p>

{# Javascript #}
    <script type="text/javascript">
        $(document).ready(function() {
{# DatePicker #}
            $('.js-datepicker').datepicker({
                todayHighlight: true,
                autoclose: true,
                calendarWeeks: true,
                clearBtn: true,
                language: '{{ app.request.locale }}'
            });
        });
    </script>
{% endblock %}