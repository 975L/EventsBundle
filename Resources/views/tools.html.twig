{% trans_default_domain 'toolbar' %}

{% spaceless %}
{# Dashboard #}
{{ toolbar_button(path('events_dashboard'), 'dashboard', 'md', 'label.events'|trans) }}

{# Display #}
{% if type != 'dashboard' and type != 'display' and type != 'help' and type != 'create' and type != 'duplicate' and type != 'config' %}
    {{ toolbar_button(path('events_display', {'slug': object.slug, 'id': object.id}), 'display') }}
{% endif %}

{# Create #}
{% if type != 'create' %}
    {{ toolbar_button(path('events_create'), 'create') }}
{% endif %}

{# Modify #}
{% if type != 'dashboard' and type != 'modify' and type != 'help' and type != 'create' and type != 'duplicate' and type != 'config' %}
    {{ toolbar_button(path('events_modify', {'slug': object.slug, 'id': object.id}), 'modify') }}
{% endif %}

{# Duplicate #}
{% if type == 'display' or type == 'modify' %}
    {{ toolbar_button(path('events_duplicate', {'id': object.id}), 'duplicate') }}
{% endif %}

{# Cancel #}
{% if type != 'dashboard' %}
    {{ toolbar_button('cancel', 'cancel') }}
{% endif %}

{# Delete #}
{% if type != 'dashboard' and type != 'delete' and type != 'help' and type != 'create' and type != 'duplicate' and type != 'config' %}
    {{ toolbar_button(path('events_delete', {'slug': object.slug, 'id': object.id}), 'delete') }}
{% endif %}

{# Config #}
{% if type != 'config' %}
    {{ toolbar_button(path('events_config'), 'config') }}
{% endif %}

{# Help #}
{% if type != 'help' %}
    {{ toolbar_button(path('events_help'), 'help') }}
{% endif %}

{# Signout #}
{{ toolbar_button(path('user_signout'), 'signout') }}

{# Other dashboards #}
{{ toolbar_dashboards('md') }}
{% endspaceless %}
