{% extends "@c975LEvents/layout.html.twig" %}
{% trans_default_domain 'events' %}

{% block events_content %}
    <div class="container text-center">
        <table class="table table-hover table-condensed table-responsive">
            <thead>
                <tr>
                    <th class="text-center">{{ 'label.title'|trans }}</th>
                    <th class="text-center">{{ 'label.start_date'|trans }}</th>
                    <th class="text-center">{{ 'label.end_date'|trans }}</th>
                    <th class="text-center">{{ 'label.place'|trans }}</th>
                    <th class="text-center">{{ 'label.add_to_calendar'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for event in events %}
                    <tr>
{# Title #}
                        <td class="text-center">
                            <strong><a href="{{ path('events_display', {'event': event.slug, 'id': event.id}) }}" title="{{ 'label.display'|trans }}">{{ event.title }}</a></strong>
                        </td>
{# StartDate and Time #}
                        <td class="text-center">
                            {{ event.startDate|localizeddate('long', 'none') }}
                            <br />
                            {{ event.startTime|localizeddate('none', 'short') }}
                        </td>
{# End date and Time #}
                        <td class="text-center">
                            {{ event.endDate|localizeddate('long', 'none') }}
                            <br />
                            {{ event.endTime|localizeddate('none', 'short') }}
                        </td>
{# Place #}
                        <td class="text-center">
                            {{ event.place }}
                        </td>
{# Add to calendar #}
                        <td class="text-center">
                            <a href="{{ path('events_ical', {'event': event.slug, 'id': event.id}) }}" class="btn btn-primary" title="{{'label.add_to_calendar'|trans }}" role="button">
                                <span class="glyphicon glyphicon-calendar"></span> {{'label.add_to_calendar'|trans }}</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}