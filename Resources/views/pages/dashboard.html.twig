{% extends "@c975LEvents/layout.html.twig" %}
{% trans_default_domain 'events' %}
{% set title = 'label.dashboard'|trans({}, 'toolbar') %}

{% block events_content %}
{# Toolbar #}
    {{ toolbar|raw }}

{# List of events and actions #}
    <div class="text-center">
        <h2>
            {{ 'text.list_events'|trans }}
        </h2>
        <table class="table table-hover table-condensed table-responsive">
            <thead>
                <tr>
                    <th class="text-center">{{ knp_pagination_sortable(events, 'Id', 'e.id') }}&nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                    <th class="text-center"><span class="glyphicon glyphicon-eye-open"></span>&nbsp;{{ knp_pagination_sortable(events, 'label.title'|trans, 'e.title') }}&nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                    <th class="text-center">{{ knp_pagination_sortable(events, 'label.semantic_url'|trans, 'e.slug') }}&nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                    <th class="text-center"><span class="glyphicon glyphicon-pencil"></span>&nbsp;{{ 'label.modify'|trans({}, 'toolbar') }}</th>
                    <th class="text-center"><span class="glyphicon glyphicon-pencil"></span>&nbsp;{{ 'label.duplicate'|trans({}, 'toolbar') }}</th>
                    <th class="text-center"><span class="glyphicon glyphicon-trash"></span>&nbsp;{{ 'label.delete'|trans({}, 'toolbar') }}</th>
                </tr>
            </thead>
            <tbody>
                {% for event in events %}
                    <tr>
{# Id #}
                        <td class="text-center">
                            {{ event.id }}
                        </td>
{# Title & Display #}
                        <td class="text-center">
                            <a href="{{ path('events_display', {'slug': event.slug, 'id': event.id}) }}" title="{{ 'label.display'|trans({}, 'toolbar') }}">{{ event.title }}</a>
                        </td>
{# Slug #}
                        <td class="text-center">
                            {{ event.slug }}
                        </td>
{# Modify #}
                        <td class="text-center">
                            <a href="{{ path('events_modify', {'slug': event.slug, 'id': event.id}) }}" title="{{ 'label.modify'|trans({}, 'toolbar') }}">{{ 'label.modify'|trans({}, 'toolbar') }}</a>
                        </td>
{# Duplicate #}
                        <td class="text-center">
                            <a href="{{ path('events_duplicate', {'id': event.id}) }}" title="{{ 'label.duplicate'|trans({}, 'toolbar') }}">{{ 'label.duplicate'|trans({}, 'toolbar') }}</a>
                        </td>
{# Delete #}
                        <td class="text-center">
                            <a href="{{ path('events_delete', {'slug': event.slug, 'id': event.id}) }}" title="{{ 'label.delete'|trans({}, 'toolbar') }}" class="text-danger">{{ 'label.delete'|trans({}, 'toolbar') }}</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
{# No events #}
        {% if events.getTotalItemCount == 0 %}
            <p class="alert alert-info">
                {{ 'label.no_events'|trans }}
            </p>
        {% endif %}
{# Pagination #}
        <div class="navigation text-center">
            {{ knp_pagination_render(events) }}
        </div>
    </div>
{% endblock %}